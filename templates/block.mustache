{{!
    @template theme_klassplace/block

    Example context (json):
    {
        "id": "block0",
        "showskiplink": true,
        "type": "html",
        "ariarole": "complementary",
        "title": "Test block",
        "blockinstanceid": 1,
        "content": "<p>Hello block world!</p>"
    }

}}
<!-- theme_klassplace/block -->
{{! Block Skip Link }}
{{#showskiplink}}
  <a href="#sb-{{skipid}}" class="sr-only sr-only-focusable">{{#str}}skipa, access, {{title}}{{/str}}</a>
{{/showskiplink}}

{{! Start Block Container }}
<section id="{{id}}"
     class="{{#iscollapsible}}is-collapsible{{/iscollapsible}} {{#hidden}}hidden{{/hidden}} block block_{{type}} {{#hascontrols}}block_with_controls{{/hascontrols}} card mb-3  {{{class}}} flex-fill"
     role="{{ariarole}}"
     data-block="{{type}}"
     {{#arialabel}}
        aria-label={{#quote}}{{{arialabel}}}{{/quote}}
     {{/arialabel}}
     {{^arialabel}}
        {{#title}}
          aria-labelledby="instance-{{blockinstanceid}}-header"
        {{/title}}
     {{/arialabel}}>

    {{! Block contents }}
    <div class="card-body p-2 page-module-{{modname}}">

        {{! Block header }}
        <div class="card-text header mt-3"
            {{#cancollapse}}data-toggle="collapse"{{/cancollapse}}
            data-target="#instance-{{blockinstanceid}}-content"
            aria-controls="instance-{{blockinstanceid}}-content" >
        {{#title}}
            <h2 id="instance-{{blockinstanceid}}-header" class="card-title">{{{title}}}</h2>
        {{/title}}

        {{#hascontrols}}
            <div class="block-controls pull-right header">
                {{{controls}}}
            </div>
        {{/hascontrols}}
        </div>

        <div class="card-text content mt-3 {{#cancollapse}}collapse{{/cancollapse}} {{firstblockclass}}"  id="instance-{{blockinstanceid}}-content" data-parent="#block-region-{{region}}">
            {{{content}}}
            <div class="footer">{{{footer}}}</div>
            {{{annotation}}}
        </div>
        <div class="subfooter"
             {{#cancollapse}}data-toggle="collapse"{{/cancollapse}}
             data-target="#instance-{{blockinstanceid}}-content"
             aria-controls="instance-{{blockinstanceid}}-content" >
        </div>
    </div>
{{! End Block Container }}
</section>

{{! Block Skip Link Target }}
{{#showskiplink}}
  <span id="sb-{{skipid}}"></span>
{{/showskiplink}}
<!-- /theme_klassplace/block -->

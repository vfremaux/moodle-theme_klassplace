{{!
    @template theme_klassplace/columns2

    Klassplace columns2 layout template.

    This template is to be used for pages that have "fixed" blocks aside the page payload that
    need to be immediately vsible and not drawable.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "hasblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}
<!-- theme_klassplace:columns2 -->
<!-- boost:head -->
{{> theme_boost/head }}
<!-- boost:head -->

<body {{{ bodyattributes }}}>
{{{technicalsignals}}}
{{> core/local/toast/wrapper}}

<!-- accessibility add-ons -->
<style>
{{{dynamiccss}}}
</style>
<!-- /accessibility add-ons -->

<div id="page-wrapper" class="columns2 d-print-block">

    {{{ output.standard_top_of_body_html }}}

    {{{blocksdebuginfo}}}

    {{#output.headertoplocation}}
        {{{ output.headerimage }}}
    {{/output.headertoplocation}}

    {{>theme_klassplace/navbar}}

    {{#output.headerbkglocation}}
        {{{ output.headerimage }}}
    {{/output.headerbkglocation}}

    <div id="page" class="d-print-block">

        <div id="page-inner" class="main-inner">

            {{{ output.teacherdash }}}
            <!-- O(full_header) -->
            {{{ output.full_header }}}
            {{#secondarymoremenu}}
                <div class="secondary-navigation">
                    {{> core/moremenu}}
                </div>
            {{/secondarymoremenu}}
            <!-- /O(full_header) -->
            {{>theme_klassplace/blockspanelslider}}

            <div id="page-content">
                <div id="region-main-box" class="col-12">
                    {{#hasregionmainsettingsmenu}}
                    <div id="region-main-settings-menu" class="d-print-none {{#hasblocks}}has-blocks{{/hasblocks}}">
                        <div> {{{ output.region_main_settings_menu }}} </div>
                    </div>
                    {{/hasregionmainsettingsmenu}}
                    <section id="region-main" {{#hasblocks}}class="has-blocks mb-3"{{/hasblocks}}>
                        <div class="card">
                            <div class="card-body">
                                {{#hasregionmainsettingsmenu}}
                                    <div class="region_main_settings_menu_proxy"></div>
                                {{/hasregionmainsettingsmenu}}
                                {{#output.display_ilearn_secure_alert}}
                                    <div class="ilearnsecurebrowser text-center">
                                        <div class="ilearnsecurealert bg-danger text-white text-center d-inline-block">
                                            <p>{{#str}} ilearnsecurebrowser , theme_klassplace{{/str}}</p>
                                        </div>
                                    </div>
                                {{/output.display_ilearn_secure_alert}}
                                {{{ output.customcoursedashboardimage }}}
                                {{{ output.course_content_header }}}
			                    {{#headercontent}}
			                        {{> core/activity_header }}
			                    {{/headercontent}}
			                    {{#overflow}}
			                        {{> core/url_select}}
			                    {{/overflow}}
                                {{{ output.main_content }}}
			                    {{{ output.activity_navigation }}}
                                {{{ output.course_content_footer }}}
                            </div>
                        </div>
                    </section>
                    {{#hasblocks}}
                    <section data-region="blocks-column" class="hidden-print">
                        {{{ sidepreblocks }}}
                    </section>
                    {{/hasblocks}}
                </div>
            </div>
        </div>
    </div>

    {{{ output.standard_after_main_region_html }}}

    {{#hasnavdrawer}}
    <!-- boost:nav-drawer -->
    {{> theme_boost/nav-drawer }}
    <!-- /boost:nav-drawer -->
    {{/hasnavdrawer}}

    {{#hasactivitynav}}
        {{{ output.activity_navigation }}}
    {{/hasactivitynav}}

</div>

<a href="#pagebottom" id="go-to-bottom" class="btn btn-primary btn-lg show" role="button" title="{{#str}}gotobottom, theme_klassplace{{/str}}"><i class="fa fa-arrow-down" aria-hidden="true"></i></a>
<a href="#" id="back-to-top" class="btn btn-primary btn-lg" role="button" title="{{#str}}backtotop, theme_klassplace{{/str}}"><i class="fa fa-arrow-up" aria-hidden="true"></i></a>

{{> theme_klassplace/footer }}

</body>
</html>
{{#js}}
require(['theme_boost/loader']);
{{#hasnavdrawer}}
require(['theme_boost/drawer'], function(mod) {
    mod.init();
});
{{/hasnavdrawer}}
{{/js}}
<!-- /theme_klassplace:columns2 -->

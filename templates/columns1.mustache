{{!
    @template theme_klassplace/columns1

    Admin time setting template.

    Klassplace 1 column layout template.

    This template is to be used for page layouts that do not need any blocks nor navigation to be displayed
    around the page payload.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "hasblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}
<!-- theme_klassplace:columns1 -->
<!-- boost:head -->
{{> theme_boost/head }}
<!-- boost:head -->

<body {{{ bodyattributes }}}>
{{{technicalsignals}}}

<!-- accessibility add-ons -->
<style>
{{{dynamiccss}}}
</style>
<!-- /accessibility add-ons -->

<div id="page-wrapper" class="columns1 d-print-block">

    <!-- output.standard_top_of_body_html -->
    {{{ output.standard_top_of_body_html }}}
    <!-- /output.standard_top_of_body_html -->

    {{{blocksdebuginfo}}}

    {{#output.headertoplocation}}
        {{{ output.headerimage }}}
    {{/output.headertoplocation}}

    {{>theme_klassplace/navbar}}

    {{#output.headerbkglocation}}
        {{{ output.headerimage }}}
    {{/output.headerbkglocation}}

    <div id="page" class="d-print-block" style="z-index:10">

        <div id="page-inner" class="d-print-block">

            {{{ output.teacherdash }}}
            {{>theme_klassplace/blockspanelslider}}
            {{{ output.full_header }}}

            <div id="page-content" class="pb-3 d-print-block">
                <div id="region-main-box" class="col-12">
                    <section id="region-main" aria-label="{{#str}}content{{/str}}">
                        {{{ output.course_content_header }}}
                        {{{ output.customcoursedashboardimage }}}
                        {{#headercontent}}
                            {{> core/activity_header }}
                        {{/headercontent}}
                        {{{ output.main_content }}}
                        {{{ output.activity_navigation }}}
                        {{{ output.course_content_footer }}}
                    </section>
                    {{#hasblocks}}
                    <section data-region="blocks-column" class="hidden-print">
                        {{{ sidepreblocks }}}
                    </section>
                    {{/hasblocks}}
                </div>
            </div>
        </div>
    </div>

    {{{ output.standard_after_main_region_html }}}

</div>

{{> theme_klassplace/footer }}

<a href="#pagebottom" id="go-to-bottom" class="btn btn-primary btn-lg show" role="button" title="{{#str}}gotobottom, theme_klassplace{{/str}}"><i class="fa fa-arrow-down" aria-hidden="true"></i></a>
<a href="#" id="back-to-top" class="btn btn-primary btn-lg" role="button" title="{{#str}}backtotop, theme_klassplace{{/str}}"><i class="fa fa-arrow-up" aria-hidden="true"></i></a>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
});
{{/js}}

<!-- /theme_klassplace:columns1 -->

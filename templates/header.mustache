{{!
    Page header.
}}
<!-- klassplace:header -->
<header id="page-header">
    <div>
        <div class="card">
            {{#boostimage}}
            {{{ headerimage }}}
            <div class="card-body">
            {{/boostimage}}
                <div class="d-flex">
                    <div>
                    <!-- contextheader -->
                    {{{contextheader}}}
                    <!-- /contextheader -->
                    </div>
                    {{#settingsmenu}}
                    <div class="context-header-settings-menu">
                        <!-- settingsmenu  -->
                        {{{settingsmenu}}}
                        <!-- /settingsmenu -->
                    </div>
                    {{/settingsmenu}}
                </div>
                <div class="d-flex flex-wrap">
                    {{#hasnavbar}}
                    <div id="page-navbar">
                        {{{navbar}}}
                    </div>
                    {{/hasnavbar}}
                    <div class="ml-auto header-pageheadingbutton">
                        {{{pageheadingbutton}}}
                    </div>
                    <div id="course-header">
                        {{{courseheader}}}
                    </div>
                </div>
            {{#boostimage}}
            </div>
            {{/boostimage}}
        </div>
    </div>
</header>
<!-- /klassplace:header -->

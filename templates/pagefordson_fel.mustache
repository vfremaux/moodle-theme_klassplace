{{!
    @template theme_boost/columns1

    Boost 1 column layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
         "bodyattributes":""
    }
}}
<!-- klassplace:pagefordson_fel  -->
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    {{>theme_fordson_fel/navbar}}

    {{#output.headerbkglocation}}
        {{{ output.headerimage }}}
    {{/output.headerbkglocation}}

    <div id="page" class="container-fluid">

        <div id="learningcontent">

            {{{ output.teacherdash }}}
            <!-- O(full_header) -->
            {{{ output.full_header }}}
            <!-- /O(full_header) -->
            {{>theme_fordson_fel/blockspanelslider}}

            {{#hasregionmainsettingsmenu}}
            <div id="region-main-settings-menu" class="d-print-none {{#hasblocks}}has-blocks{{/hasblocks}}">
                <div> {{{ output.region_main_settings_menu }}} </div>
            </div>
            {{/hasregionmainsettingsmenu}}
            {{#hasregionmainsettingsmenu}}
                <div class="region_main_settings_menu_proxy"></div>
            {{/hasregionmainsettingsmenu}}
            <!-- O(course_content_header) -->
            {{{ output.course_content_header }}}
            <!-- /O(course_content_header) -->
            <div id="format_page_content" class="format_page_content clearfix">
            <!-- O(main_content) -->
            {{{ output.main_content }}}
            <!-- /O(main_content) -->
            </div>
            <!-- O(course_content_footer) -->
            {{{ output.course_content_footer }}}
            <!-- O(course_content_footer) -->

            {{{ output.activity_navigation }}}
        </div>
    </div>

    {{{ output.standard_after_main_region_html }}}

    {{#hasnavdrawer}}
    {{> theme_boost/nav-drawer }}
    {{/hasnavdrawer}}

</div>

<a href="#pagebottom" id="go-to-bottom" class="btn btn-primary btn-lg show" role="button" title="{{#str}}gotobottom, theme_fordson_fel{{/str}}"><i class="fa fa-arrow-down" aria-hidden="true"></i></a>
<a href="#" id="back-to-top" class="btn btn-primary btn-lg" role="button" title="{{#str}}backtotop, theme_fordson_fel{{/str}}"><i class="fa fa-arrow-up" aria-hidden="true"></i></a>

{{> theme_fordson_fel/footer }}

</body>
</html>
{{#js}}
require(['theme_boost/loader']);
{{#hasnavdrawer}}
require(['theme_boost/drawer'], function(mod) {
    mod.init();
});
{{/hasnavdrawer}}
{{/js}}
<!-- /klassplace:pagefordson_fel -->
